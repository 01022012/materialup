<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="org.goodev.material.App" />

        <variable
            name="data"
            type="org.goodev.material.model.Notification" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="?cardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_micro"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/shot_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_text"
            android:paddingEnd="@dimen/spacing_text"
            android:paddingBottom="@dimen/spacing_text"
            android:layoutMode="opticalBounds">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/userImage"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/spacing_normal"
                android:clickable="true"
                android:focusable="true"
                app:normalUrl="@{data.userAvatar}"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/person_image_empty"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="#3ddd"
                fresco:roundingBorderWidth="1dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/spacing_text"
                android:text="@{data.timestamp}"
                android:textAppearance="@style/TextAppearance.CommentTimestamp" />

            <TextView
                android:id="@+id/updater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/userImage"
                android:layout_toStartOf="@id/time"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@{data.username}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/updater"
                android:layout_toEndOf="@id/userImage"
                android:gravity="center_vertical"
                android:text="@{data.message}"
                android:layout_marginBottom="@dimen/spacing_text"
                android:layout_marginEnd="@dimen/spacing_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@{data.viewed ? @color/text_tertiary_dark : @color/black }" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>